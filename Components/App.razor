    <script>
        window.drawHeatmap = function () {
            console.log("drawHeatmap called");
            const mapEl = document.getElementById('map');
            console.log("mapEl size:", mapEl && mapEl.getBoundingClientRect());

            if (window._heatmapMap) {
                console.log("removing old map");
                window._heatmapMap.remove();
            }

            window._heatmapMap = L.map('map').setView([51.5719, 4.7683], 13);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(window._heatmapMap);

            var addressPoints = [
                [51.5719, 4.7683, 0.2],
                [51.5720, 4.7690, 0.5],
                [51.5730, 4.7700, 0.8]
            ];
            L.heatLayer(addressPoints, {
                radius: 25,
                blur: 15,
                maxZoom: 17,
            }).addTo(window._heatmapMap);
        };
    </script>
