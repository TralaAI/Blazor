    <!-- 🟢 All JavaScript goes at the END of body -->
    <script src="_framework/blazor.web.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet.heat/dist/leaflet-heat.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/heatmap.js/2.0.0/heatmap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.drawHeatmap = function (parameter, element) {
            console.log("drawHeatmap called");
            const mapEl = document.getElementById(element);
            console.log("mapEl size:", mapEl && mapEl.getBoundingClientRect());

            if (window._heatmapMap) {
                console.log("removing old map");
                window._heatmapMap.remove();
            }

            // Assume 'parameter' is an array of HeatmapData objects from .NET
            // Convert to [lat, lng, intensity] format for heatLayer
            const addressPoints = parameter.map(item => [
                Number(item.latitude),
                Number(item.longitude),
                Number(item.totalLitterPerCamera)
            ]);

            // Find the max value for normalization
            const maxValue = Math.max(...parameter.map(item => Number(item.totalLitterPerCamera)));

            const bredaCenter = [51.58843277555672, 4.776001205701836];
            window._heatmapMap = L.map('map').setView(bredaCenter, 13);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(window._heatmapMap);

            L.heatLayer(addressPoints, {
                radius: 25,
                blur: 15,
                maxZoom: 17,
                max: maxValue > 0 ? maxValue : 1
            }).addTo(window._heatmapMap);
        };
    </script>
</body>

