@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main style="overflow-y: auto; height: 100vh;">
        <div class="top-row px-4 status-bar">
            <div class="status-left">
                <strong>Laatste update:</strong> @lastUpdated?.ToString()
            </div>

            <div class="status-right">
                <button class="refresh-button" @onclick="SimuleerStatusUpdate">Settings</button>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Er is een onverwachte fout opgetreden.
    <a href="." class="reload">Herlaad</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private DateTime? lastUpdated;
    private bool pythonStatus;
    private bool dotnetStatus;
    private bool holidayStatus;

    protected override async Task OnInitializedAsync()
    {
        await SimuleerStatusUpdate();
    }

    private async Task SimuleerStatusUpdate()
    {
        // Simuleer willekeurige status
        var random = new Random();
        pythonStatus = random.Next(2) == 0;
        dotnetStatus = random.Next(2) == 0;
        holidayStatus = random.Next(2) == 0;

        lastUpdated = DateTime.Now;
        await InvokeAsync(StateHasChanged);
    }
}
