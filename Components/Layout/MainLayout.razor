@inherits LayoutComponentBase

@inject NavigationManager Navigation


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 status-bar">
    <div class="status-left">
        <strong>Laatste update:</strong> @lastUpdated?.ToString()
    </div>

    @* <div class="status-center">
        <span class="api-status" style="color:@(pythonStatus ? "limegreen" : "red")">Python API</span>
        <span class="api-status" style="color:@(dotnetStatus ? "limegreen" : "red")">.NET API</span>
        <span class="api-status" style="color:@(holidayStatus ? "limegreen" : "red")">Holiday API</span>
    </div> *@

    <div class="status-right">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Settings⚙️
            </NavLink>
        </div>
        @* <button class="refresh-button" @onclick="GoToSettings">Settings</button> *@
    </div>



        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Er is een onverwachte fout opgetreden.
    <a href="." class="reload">Herlaad</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private DateTime? lastUpdated;
    private bool pythonStatus;
    private bool dotnetStatus;
    private bool holidayStatus;

    protected override async Task OnInitializedAsync()
    {
        await SimuleerStatusUpdate();
    }

    private async Task SimuleerStatusUpdate()
    {
        // Simuleer willekeurige status
        var random = new Random();
        pythonStatus = random.Next(2) == 0;
        dotnetStatus = random.Next(2) == 0;
        holidayStatus = random.Next(2) == 0;

        lastUpdated = DateTime.Now;
        await InvokeAsync(StateHasChanged);
    }
}


@code {
    private void GoToSettings()
    {
        Navigation.NavigateTo("/settings");
    }
}

