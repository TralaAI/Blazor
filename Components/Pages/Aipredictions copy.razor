        color: #888888;
    }

        .heatmap-box {
    position: relative;
    height: 300px;
    width: 100%;
    overflow: hidden;
    }

    .heatmap-background {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    }


    @@media (max-width: 768px) {
        .middle-section {
            flex-direction: column;
        }
    }
</style>

