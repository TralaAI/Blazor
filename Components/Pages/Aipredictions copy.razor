        flex: 2;
        border-radius: 7px;
    }

    h3 {
        color: #0078d4;
        margin-bottom: 0.5rem;
    }

    .placeholder {
        height: 70%;
        width: 100%;
        border: 2px dashed #cccccc;
        border-radius: 8px;
        background-color: #fafafa;
        display: flex;
        align-items: center;
