@page "/heatmap"
@using Blazor.Interfaces;
@inject IBackendService _backendService;
@inject IJSRuntime JS

<div class="page-container">
    <!-- Top Large section -->
    <div class="top-section">
        <h3>Heatmap</h3>
        <div id="heatmapContainer" class="heatmap-box"></div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("Calling JS Interop to draw heatmap...");
            await JS.InvokeVoidAsync("heatmapInterop.drawMap");
            Console.WriteLine("JS Interop call done.");
        }
    }
}


<style>
    .page-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #f0f2f5;
        padding: 1rem;
        gap: 1rem;
        box-sizing: border-box;
    }

    .top-section {
        flex: 3;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
    }


    .heatmap-box {
        height: 400px; /* or any fixed size */
        width: 100%;
        border-radius: 8px;
        background-color: #fafafa;
        position: relative; /* important for heatmap canvas */
    }

    .middle-section {
        flex: 3;
        display: flex;
        gap: 1rem;
    }

    .left-panel,
    .right-panel {
        flex: 2;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
    }

    .bottom-section {
        flex: 3;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .top-bottom-split {
        flex: 2;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .top-inner,
    .bottom-inner {
        flex: 2;
        border-radius: 7px;
    }

    h3 {
        color: #0078d4;
        margin-bottom: 0.5rem;
    }

    @@media (max-width: 768px) {
        .middle-section {
            flex-direction: column;
        }
    }
</style>
